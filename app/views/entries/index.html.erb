<% content_for :title do %>
   Foodlog &ndash; <%= DateTime.now.to_s(:nice_date) %> 
<% end %>

<div class="columns mt-6 is-centered">
    <% @entries.each do |entry| %>
     <div class="column is-one-quarter" >
      <div class = "card">
      <header class="card-header">
        <p class= "card-header-title"><%= entry.meal_type %> - <%= entry.category.title if entry.category.present? %>  </p>
      </header>

      <div class="card-content">
        <div class="content">
        
          <p>calories: <span class="has-text-weight-bold"><%= entry.calories %></span></p>
          <p>grams of proteins: <span class="has-text-weight-bold"><%= entry.proteins %></span></p>
          <p>grams of carbohydrates: <span class="has-text-weight-bold"><%= entry.carbohydrates %></span></p>
          <p>grams of fats: <span class="has-text-weight-bold"><%= entry.fats %></span></p>
          <p class="italic">Logged <%= time_ago_in_words(entry.created_at) %> ago </p>
        </div>
      </div>

      <div class="card-footer">  
          <%= link_to 'Show', entry, class: "card-footer-item" %>
          <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
        </div>
        </div>
     </div>
    <% end %>
</div>

<div class= "columns is-centered mt-6">
  <%= link_to "View all", archives_index_path, class: "button is-primary is-outlined is-centered" %>
</div>

